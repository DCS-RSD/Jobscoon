<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ApplicantListEmployerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="29dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/app_logo2" />

        <ImageView
            android:id="@+id/app_name"
            android:layout_width="156dp"
            android:layout_height="25dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/app_title2" />


        <ScrollView
            android:id="@+id/scrollView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_name">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="0dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.cardview.widget.CardView
                    android:id="@+id/applicant1"
                    style="@style/jobs_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/applicant_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/hind_siliguri_bold"
                            android:text="Chai Xu Kun"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/applicant_email1"
                            style="@style/jobs_detail_card_view"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginStart="20dp"

                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/applicant_name1">

                            <androidx.constraintlayout.widget.ConstraintLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/salary_layout_color">

                                <ImageView
                                    android:id="@+id/icon_email1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="7px"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/icon_email" />

                                <TextView
                                    android:id="@+id/email_details1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginBottom="1dp"
                                    android:fontFamily="@font/hind_siliguri_bold"
                                    android:text="@string/applicant_email"
                                    android:textColor="@color/salary_text_color"
                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/icon_email1"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/applicant_phone1"
                            style="@style/jobs_detail_card_view"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="@id/applicant_email1"
                            app:layout_constraintTop_toBottomOf="@id/applicant_email1">

                            <androidx.constraintlayout.widget.ConstraintLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/jobsType_layout_color">

                                <ImageView
                                    android:id="@+id/icon_phone1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="7px"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/icon_phone" />

                                <TextView
                                    android:id="@+id/jobType_detail1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginBottom="1dp"
                                    android:fontFamily="@font/hind_siliguri_bold"
                                    android:text="+601108020802"
                                    android:textColor="@color/jobsType_text_color"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/icon_phone1"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="24dp"
                            android:background="@color/search_view_border_color"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/applicant_phone1" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="32dp"
                            android:fontFamily="@font/hind_siliguri"

                            android:text=" - 2.5 years experience in relevant field\n
- Degree in Computer Science.\n
- Pro in Flutter, Laravel and React Native.\n
- Hobby is sing, dance, rap and play basketball."
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view3" />

                        <LinearLayout
                            android:id="@+id/button_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView10">

                            <Button
                                android:id="@+id/accept_button"
                                style="@style/interview_accept_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/salary_text_color"
                                android:drawableLeft="@drawable/icon_done"
                                android:fontFamily="@font/hind_siliguri_bold"
                                android:text="ACCEPT"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/reject_button"
                                app:layout_constraintStart_toStartOf="parent" />

                            <Button
                                android:id="@+id/reject_button"
                                style="@style/interview_declined_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/rejected_text_color"
                                android:drawableLeft="@drawable/icon_cancel"
                                android:fontFamily="@font/hind_siliguri_bold"
                                android:text="DECLINE"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/accept_button" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/posted_time1"
                            style="@style/history_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="@string/_1_day_ago"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/applicant_phone1"
                            app:layout_constraintTop_toBottomOf="@+id/button_layout" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/applicant2"
                    style="@style/jobs_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/applicant_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/hind_siliguri_bold"
                            android:text="Chai Ai Kun"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/applicant_email2"
                            style="@style/jobs_detail_card_view"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginStart="20dp"

                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/applicant_name2">

                            <androidx.constraintlayout.widget.ConstraintLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/salary_layout_color">

                                <ImageView
                                    android:id="@+id/icon_email2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="7px"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/icon_email" />

                                <TextView
                                    android:id="@+id/email_details2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginBottom="1dp"
                                    android:fontFamily="@font/hind_siliguri_bold"
                                    android:text="@string/applicant_email"
                                    android:textColor="@color/salary_text_color"
                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/icon_email2"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/applicant_phone2"
                            style="@style/jobs_detail_card_view"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="@id/applicant_email2"
                            app:layout_constraintTop_toBottomOf="@id/applicant_email2">

                            <androidx.constraintlayout.widget.ConstraintLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/jobsType_layout_color">

                                <ImageView
                                    android:id="@+id/icon_phone2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="7px"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/icon_phone" />

                                <TextView
                                    android:id="@+id/jobType_detail2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginBottom="1dp"
                                    android:fontFamily="@font/hind_siliguri_bold"
                                    android:text="+601108020802"
                                    android:textColor="@color/jobsType_text_color"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/icon_phone2"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <View
                            android:id="@+id/line2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="24dp"
                            android:background="@color/search_view_border_color"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/applicant_phone2" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="32dp"

                            android:fontFamily="@font/hind_siliguri"
                            android:text="Please hire me."
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/line2" />

                        <LinearLayout
                            android:id="@+id/button_layout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView11">

                            <Button
                                android:id="@+id/accept_button2"
                                style="@style/interview_accept_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/salary_text_color"
                                android:drawableLeft="@drawable/icon_done"
                                android:fontFamily="@font/hind_siliguri_bold"
                                android:text="ACCEPT"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/reject_button"
                                app:layout_constraintStart_toStartOf="parent" />

                            <Button
                                android:id="@+id/reject_button2"
                                style="@style/interview_declined_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/rejected_text_color"
                                android:drawableLeft="@drawable/icon_cancel"
                                android:fontFamily="@font/hind_siliguri_bold"
                                android:text="DECLINE"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/accept_button" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/posted_time2"
                            style="@style/history_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="@string/_1_day_ago"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/applicant_phone2"
                            app:layout_constraintTop_toBottomOf="@+id/button_layout2" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>