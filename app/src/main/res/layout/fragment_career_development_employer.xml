<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".employee.JobDetailsEmployeeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icon_arrowback" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icon_home" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:fillViewport="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/top_nav">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/programme_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:fontFamily="@font/hind_siliguri_bold"
                        android:text="Career Development"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="DuplicateIds" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/programme1"
                        style="@style/jobs_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/programme_title1">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="409dp">

                            <ImageView
                                android:id="@+id/careerUpdateImage"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_marginTop="0dp"
                                android:contentDescription="updateImage1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.0"
                                app:srcCompat="@drawable/idol_producer" />

                            <TextView
                                android:id="@+id/ptitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/hind_siliguri_bold"
                                android:text="Idol Producer Audition Tour 2023"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.1"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/careerUpdateImage" />

                            <TextView
                                android:id="@+id/plocation"
                                style="@style/careerdev_loc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/hind_siliguri_bold"
                                android:text="Online, No Location"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="@+id/ptitle"
                                app:layout_constraintTop_toBottomOf="@+id/ptitle" />

                            <ImageView
                                android:id="@+id/time1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/icon_time"
                                app:layout_constraintStart_toStartOf="@+id/plocation"
                                app:layout_constraintTop_toBottomOf="@+id/plocation" />

                            <TextView
                                android:id="@+id/time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="8:00AM"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                app:layout_constraintBottom_toBottomOf="@+id/time1"
                                app:layout_constraintStart_toEndOf="@+id/time1"
                                app:layout_constraintTop_toTopOf="@+id/time1" />

                            <TextView
                                android:id="@+id/time4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:text="22:00PM"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                app:layout_constraintBottom_toBottomOf="@+id/time3"
                                app:layout_constraintStart_toEndOf="@+id/time3"
                                app:layout_constraintTop_toTopOf="@+id/time3" />

                            <TextView
                                android:id="@+id/time3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                app:layout_constraintBottom_toBottomOf="@+id/time"
                                app:layout_constraintStart_toEndOf="@+id/time"
                                app:layout_constraintTop_toTopOf="@+id/time" />

                            <ImageView
                                android:id="@+id/date1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/icon_calendar"
                                app:layout_constraintStart_toStartOf="@+id/time1"
                                app:layout_constraintTop_toBottomOf="@+id/time1" />

                            <TextView
                                android:id="@+id/pDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="03/08/2023"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                app:layout_constraintBottom_toBottomOf="@+id/date1"
                                app:layout_constraintStart_toEndOf="@+id/date1"
                                app:layout_constraintTop_toTopOf="@+id/date1" />

                            <ImageView
                                android:id="@+id/ticket1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/baseline_ticket"
                                app:layout_constraintStart_toStartOf="@+id/date1"
                                app:layout_constraintTop_toBottomOf="@+id/date1" />

                            <TextView
                                android:id="@+id/pticket"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="FREE"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                app:layout_constraintBottom_toBottomOf="@+id/ticket1"
                                app:layout_constraintStart_toEndOf="@+id/ticket1"
                                app:layout_constraintTop_toTopOf="@+id/ticket1" />

                            <Button
                                android:id="@+id/edit_btn"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginStart="21dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="21dp"
                                android:layout_marginBottom="16dp"
                                android:backgroundTint="@color/salary_text_color"
                                android:fontFamily="@font/hind_siliguri_bold"
                                android:text="EDIT"
                                android:textSize="15dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/pticket" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/programme2"
                        style="@style/jobs_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/programme1">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="408dp">

                            <ImageView
                                android:id="@+id/careerUpdateImageb"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_marginTop="0dp"
                                android:contentDescription="updateImage1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.0"
                                app:srcCompat="@drawable/career" />

                            <TextView
                                android:id="@+id/ptitleb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/hind_siliguri_bold"
                                android:text="The Awesome Career Fair"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.128"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/careerUpdateImageb" />

                            <TextView
                                android:id="@+id/plocationb"
                                style="@style/careerdev_loc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/hind_siliguri_bold"
                                android:text="Kuala Lumpur City Centre"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="@+id/ptitleb"
                                app:layout_constraintTop_toBottomOf="@+id/ptitleb" />

                            <ImageView
                                android:id="@+id/time1b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/icon_time"
                                app:layout_constraintStart_toStartOf="@+id/plocationb"
                                app:layout_constraintTop_toBottomOf="@+id/plocationb" />

                            <TextView
                                android:id="@+id/timeb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="10:00AM"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                app:layout_constraintBottom_toBottomOf="@+id/time1b"
                                app:layout_constraintStart_toEndOf="@+id/time1b"
                                app:layout_constraintTop_toTopOf="@+id/time1b" />

                            <TextView
                                android:id="@+id/timeb2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                app:layout_constraintBottom_toBottomOf="@+id/timeb"
                                app:layout_constraintStart_toEndOf="@+id/timeb"
                                app:layout_constraintTop_toTopOf="@+id/timeb" />

                            <TextView
                                android:id="@+id/timeb3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:text="22:00PM"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                app:layout_constraintBottom_toBottomOf="@+id/timeb2"
                                app:layout_constraintStart_toEndOf="@+id/timeb2"
                                app:layout_constraintTop_toTopOf="@+id/timeb2" />

                            <ImageView
                                android:id="@+id/date1b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/icon_calendar"
                                app:layout_constraintStart_toStartOf="@+id/time1b"
                                app:layout_constraintTop_toBottomOf="@+id/time1b" />

                            <TextView
                                android:id="@+id/pDateb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="07/07/2018"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                app:layout_constraintBottom_toBottomOf="@+id/date1b"
                                app:layout_constraintStart_toEndOf="@+id/date1b"
                                app:layout_constraintTop_toTopOf="@+id/date1b" />

                            <ImageView
                                android:id="@+id/ticket1b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/baseline_ticket"
                                app:layout_constraintStart_toStartOf="@+id/date1b"
                                app:layout_constraintTop_toBottomOf="@+id/date1b" />

                            <TextView
                                android:id="@+id/pticketb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="FREE"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                app:layout_constraintBottom_toBottomOf="@+id/ticket1b"
                                app:layout_constraintStart_toEndOf="@+id/ticket1b"
                                app:layout_constraintTop_toTopOf="@+id/ticket1b" />

                            <Button
                                android:id="@+id/edit_btn2"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginStart="21dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="21dp"
                                android:layout_marginBottom="16dp"
                                android:backgroundTint="@color/salary_text_color"
                                android:fontFamily="@font/hind_siliguri_bold"
                                android:text="EDIT"
                                android:textSize="15dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/pticketb" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

