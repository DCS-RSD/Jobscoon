<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyJobsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/icon_arrowback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_arrowback" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_home" />

        <TextView
            android:id="@+id/my_jobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/hind_siliguri_bold"
            android:text="My Jobs"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_arrowback" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_nav">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/jobs1"
                style="@style/jobs_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/job_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/hind_siliguri_bold"
                        android:text="Customer Service Associate"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView9"
                        style="@style/jobs_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/job_detail_text_background"
                        android:backgroundTint="@color/pending_layout_color"
                        android:text="Pending"
                        android:textColor="@color/pending_text_color"
                        app:layout_constraintBottom_toBottomOf="@id/job_name1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/job_name1" />

                    <TextView
                        android:id="@+id/textView5"
                        style="@style/company_and_location_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brand C Real Estate"
                        app:layout_constraintStart_toStartOf="@+id/job_name1"
                        app:layout_constraintTop_toBottomOf="@id/job_name1"/>

                    <TextView
                        android:id="@+id/textView6"
                        style="@style/company_and_location_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kuala_lumpur"
                        app:layout_constraintStart_toStartOf="@+id/textView5"
                        app:layout_constraintTop_toBottomOf="@+id/textView5" />

                    <TextView
                        android:id="@+id/textView23"
                        style="@style/salary_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/rm_3000_rm_8000_a_month"
                        app:layout_constraintStart_toStartOf="@+id/textView6"
                        app:layout_constraintTop_toBottomOf="@+id/textView6" />

                    <TextView
                        android:id="@+id/textView13"
                        style="@style/jobsType_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/jobsType_layout_color"
                        android:text="@string/full_time"
                        app:layout_constraintStart_toStartOf="@+id/textView23"
                        app:layout_constraintTop_toBottomOf="@+id/textView23" />

                    <TextView
                        android:id="@+id/textView15"
                        style="@style/jobsShift_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/monday_to_friday"
                        app:layout_constraintStart_toStartOf="@+id/textView13"
                        app:layout_constraintTop_toBottomOf="@+id/textView13" />



                    <TextView
                        android:id="@+id/apply_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Applied on 22-3-2023"
                        style="@style/history_date"
                        app:layout_constraintStart_toStartOf="@id/textView15"
                        app:layout_constraintTop_toBottomOf="@id/textView15"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@id/apply_date"
                        app:layout_constraintEnd_toEndOf="@+id/textView9"
                        app:layout_constraintTop_toTopOf="@id/apply_date"
                        app:srcCompat="@drawable/icon_close" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                        app:layout_constraintEnd_toStartOf="@+id/imageView8"
                        app:srcCompat="@drawable/icon_group" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/jobs2"
                style="@style/jobs_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="@id/jobs1"
                app:layout_constraintTop_toBottomOf="@id/jobs1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/job_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/hind_siliguri_bold"
                        android:text="Customer Service Associate"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/status2"
                        style="@style/jobs_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/job_detail_text_background"
                        android:backgroundTint="@color/rejected_layout_color"
                        android:text="Rejected"
                        android:textColor="@color/rejected_text_color"
                        app:layout_constraintBottom_toBottomOf="@id/job_name2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/job_name2" />

                    <TextView
                        android:id="@+id/company2"
                        style="@style/company_and_location_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brand C Real Estate"
                        app:layout_constraintStart_toStartOf="@+id/job_name2"
                        app:layout_constraintTop_toBottomOf="@id/job_name2"/>

                    <TextView
                        android:id="@+id/location2"
                        style="@style/company_and_location_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kuala_lumpur"
                        app:layout_constraintStart_toStartOf="@+id/company2"
                        app:layout_constraintTop_toBottomOf="@+id/company2" />

                    <TextView
                        android:id="@+id/salary2"
                        style="@style/salary_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/rm_3000_rm_8000_a_month"
                        app:layout_constraintStart_toStartOf="@+id/location2"
                        app:layout_constraintTop_toBottomOf="@+id/location2" />

                    <TextView
                        android:id="@+id/jobType2"
                        style="@style/jobsType_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/jobsType_layout_color"
                        android:text="@string/full_time"
                        app:layout_constraintStart_toStartOf="@+id/salary2"
                        app:layout_constraintTop_toBottomOf="@+id/salary2" />

                    <TextView
                        android:id="@+id/jobShift2"
                        style="@style/jobsShift_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/monday_to_friday"
                        app:layout_constraintStart_toStartOf="@+id/jobType2"
                        app:layout_constraintTop_toBottomOf="@+id/jobType2" />



                    <TextView
                        android:id="@+id/apply_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Applied on 22-3-2023"
                        style="@style/history_date"
                        app:layout_constraintStart_toStartOf="@id/jobShift2"
                        app:layout_constraintTop_toBottomOf="@id/jobShift2"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:id="@+id/cancel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@id/apply_date2"
                        app:layout_constraintEnd_toEndOf="@+id/status2"
                        app:layout_constraintTop_toTopOf="@id/apply_date2"
                        app:srcCompat="@drawable/icon_close" />

                    <ImageView
                        android:id="@+id/interview2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/cancel2"
                        app:layout_constraintEnd_toStartOf="@+id/cancel2"
                        app:srcCompat="@drawable/icon_group" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/jobs3"
                style="@style/jobs_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="@id/jobs2"
                app:layout_constraintTop_toBottomOf="@id/jobs2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/job_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/hind_siliguri_bold"
                        android:text="Customer Service Associate"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/status3"
                        style="@style/jobs_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/job_detail_text_background"
                        android:backgroundTint="@color/accepted_layout_color"
                        android:text="Accepted"
                        android:textColor="@color/accepted_text_color"
                        app:layout_constraintBottom_toBottomOf="@id/job_name3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/job_name3" />

                    <TextView
                        android:id="@+id/company3"
                        style="@style/company_and_location_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brand C Real Estate"
                        app:layout_constraintStart_toStartOf="@+id/job_name3"
                        app:layout_constraintTop_toBottomOf="@id/job_name3"/>

                    <TextView
                        android:id="@+id/location3"
                        style="@style/company_and_location_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kuala_lumpur"
                        app:layout_constraintStart_toStartOf="@+id/company3"
                        app:layout_constraintTop_toBottomOf="@+id/company3" />

                    <TextView
                        android:id="@+id/salary3"
                        style="@style/salary_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/rm_3000_rm_8000_a_month"
                        app:layout_constraintStart_toStartOf="@+id/location3"
                        app:layout_constraintTop_toBottomOf="@+id/location3" />

                    <TextView
                        android:id="@+id/jobType3"
                        style="@style/jobsType_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/jobsType_layout_color"
                        android:text="@string/full_time"
                        app:layout_constraintStart_toStartOf="@+id/salary3"
                        app:layout_constraintTop_toBottomOf="@+id/salary3" />

                    <TextView
                        android:id="@+id/jobShift3"
                        style="@style/jobsShift_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/monday_to_friday"
                        app:layout_constraintStart_toStartOf="@+id/jobType3"
                        app:layout_constraintTop_toBottomOf="@+id/jobType3" />



                    <TextView
                        android:id="@+id/apply_date3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Applied on 22-3-2023"
                        style="@style/history_date"
                        app:layout_constraintStart_toStartOf="@id/jobShift3"
                        app:layout_constraintTop_toBottomOf="@id/jobShift3"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:id="@+id/cancel3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@id/apply_date3"
                        app:layout_constraintEnd_toEndOf="@+id/status3"
                        app:layout_constraintTop_toTopOf="@id/apply_date3"
                        app:srcCompat="@drawable/icon_close" />

                    <ImageView
                        android:id="@+id/interview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/cancel3"
                        app:layout_constraintEnd_toStartOf="@+id/cancel3"
                        app:srcCompat="@drawable/icon_group" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>