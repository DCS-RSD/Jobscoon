<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/findJobsEmployeeFragment">


    <fragment
        android:id="@+id/findJobsEmployeeFragment"
        android:name="com.example.assignment.FindJobsEmployeeFragment"
        android:label="fragment_find_jobs_employee"
        tools:layout="@layout/fragment_find_jobs_employee" >
        <action
            android:id="@+id/action_findJobsEmployeeFragment_to_jobDetailsEmployeeFragment"
            app:destination="@id/jobDetailsEmployeeFragment" />
    </fragment>
    <fragment
        android:id="@+id/jobDetailsEmployeeFragment"
        android:name="com.example.assignment.JobDetailsEmployeeFragment"
        android:label="fragment_job_details_employee"
        tools:layout="@layout/fragment_job_details_employee" >
        <action
            android:id="@+id/action_jobDetailsEmployeeFragment_to_jobsAppliedEmployeeFragment"
            app:destination="@id/jobsAppliedEmployeeFragment" />
        <action
            android:id="@+id/action_jobDetailsEmployeeFragment_to_findJobsEmployeeFragment"
            app:destination="@id/findJobsEmployeeFragment" />
    </fragment>
    <fragment
        android:id="@+id/jobsAppliedEmployeeFragment"
        android:name="com.example.assignment.JobsAppliedEmployeeFragment"
        android:label="fragment_jobs_applied_employee"
        tools:layout="@layout/fragment_jobs_applied_employee" >
        <action
            android:id="@+id/action_jobsAppliedEmployeeFragment_to_jobDetailsEmployeeFragment"
            app:destination="@id/jobDetailsEmployeeFragment" />
    </fragment>

</navigation>