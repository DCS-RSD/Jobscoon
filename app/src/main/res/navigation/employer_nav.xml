<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/jobPostedEmployerFragment">


    <fragment
        android:id="@+id/jobPostedEmployerFragment"
        android:name="com.example.assignment.employer.JobPostedEmployerFragment"
        android:label="fragment_job_posted_employer"
        tools:layout="@layout/fragment_job_posted_employer" >
        <action
            android:id="@+id/action_jobPostedEmployerFragment_to_postJobEmployerFragment"
            app:destination="@id/postJobEmployerFragment" />
        <action
            android:id="@+id/action_jobPostedEmployerFragment_to_jobDetailsEmployerFragment"
            app:destination="@id/jobDetailsEmployerFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileEmployerFragment"
        android:name="com.example.assignment.employer.ProfileEmployerFragment"
        android:label="fragment_profile_employer"
        tools:layout="@layout/fragment_profile_employer" >
        <action
            android:id="@+id/action_profileEmployerFragment_to_changePasswordFragment2"
            app:destination="@id/changePasswordFragment2" />
    </fragment>
    <fragment
        android:id="@+id/changePasswordFragment2"
        android:name="com.example.assignment.employee.ChangePasswordFragment"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" />
    <fragment
        android:id="@+id/postJobEmployerFragment"
        android:name="com.example.assignment.employer.PostJobEmployerFragment"
        android:label="fragment_post_job_employer"
        tools:layout="@layout/fragment_post_job_employer" />
    <fragment
        android:id="@+id/jobDetailsEmployerFragment"
        android:name="com.example.assignment.employer.JobDetailsEmployerFragment"
        android:label="fragment_job_details_employer"
        tools:layout="@layout/fragment_job_details_employer" />
</navigation>