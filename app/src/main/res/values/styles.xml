<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginEnd">20sp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:ems">10</item>
        <item name="android:padding">20sp</item>
        <item name="android:background">@drawable/input_layout</item>
    </style>

    <style name="submit_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:paddingLeft">50sp</item>
        <item name="android:paddingRight">50sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="heading2">
        <item name="android:fontFamily">@font/teko_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="badge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_border</item>
        <item name="android:paddingStart">10sp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingEnd">10sp</item>
        <item name="android:paddingBottom">5sp</item>
    </style>

    <style name="interviewer_detail_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:drawablePadding">10sp</item>
    </style>
    <style name="jobs_card_view">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="jobs_detail_card_view">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="company_and_location_name_text">
        <item name="fontFamily">@font/hind_siliguri</item>
        <item name="android:textSize">16sp</item>
    </style>



    <style name="jobs_name_text">
        <item name="fontFamily">@font/hind_siliguri_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="jobs_detail_name_text">
        <item name="fontFamily">@font/hind_siliguri_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="jobs_detail_text">
        <item name="fontFamily">@font/hind_siliguri_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="job_desc">
        <item name="fontFamily">@font/hind_siliguri</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>