<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginEnd">20sp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:ems">10</item>
        <item name="android:padding">20sp</item>
        <item name="android:background">@drawable/input_layout</item>
    </style>

    <style name="history_date">
        <item name="fontFamily">@font/archivo_narrow_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="jobs_card_view">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="jobs_detail_card_view">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="company_and_location_name_text">
        <item name="fontFamily">@font/hind_siliguri</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="jobs_name_text">
        <item name="fontFamily">@font/hind_siliguri_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="jobs_detail_name_text">
        <item name="fontFamily">@font/hind_siliguri_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="jobs_detail_text">
        <item name="fontFamily">@font/hind_siliguri_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="salary_detail_text">
        <item name="fontFamily">@font/hind_siliguri_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@drawable/job_detail_text_background</item>
        <item name="android:backgroundTint">@color/salary_layout_color</item>
        <item name="android:textColor">@color/salary_text_color</item>
    </style>

    <style name="jobsType_detail_text">
        <item name="fontFamily">@font/hind_siliguri_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@drawable/job_detail_text_background</item>
        <item name="android:backgroundTint">@color/jobsType_layout_color</item>
        <item name="android:textColor">@color/jobsType_text_color</item>
    </style>

    <style name="jobsShift_detail_text">
        <item name="fontFamily">@font/hind_siliguri_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@drawable/job_detail_text_background</item>
        <item name="android:backgroundTint">@color/jobsShift_layout_color</item>
        <item name="android:textColor">@color/jobsShift_text_color</item>
    </style>

    <style name="myJobs_detail_text">
        <item name="fontFamily">@font/hind_siliguri_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@drawable/job_detail_text_background</item>
        <item name="android:backgroundTint">@color/myJobs_details_layout_color</item>
        <item name="android:textColor">@color/myJobs_details_text_color</item>
    </style>

    <style name="job_desc">
        <item name="fontFamily">@font/hind_siliguri</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="day">
        <item name="fontFamily">@font/hind_siliguri_bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">32dp</item>
    </style>

    <style name="month">
        <item name="fontFamily">@font/hind_siliguri_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">48dp</item>
    </style>

    <style name="year">
        <item name="fontFamily">@font/hind_siliguri_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="interview_detail_text">
        <item name="fontFamily">@font/hind_siliguri</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="interview_button">
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/hind_siliguri_bold</item>
    </style>

</resources>