        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Assignment"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".auth.AuthActivity"
            android:exported="false" />
        <activity
            android:name=".NavigationHost"
            android:exported="false" />
        <activity
            android:name=".EmployerSignUpActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".InterviewFormActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".JobPostFormActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".CompanyProfileActivity"
            android:exported="false" />
        <activity
            android:name=".UpcomingInterviewActivity"
            android:exported="false" />
        <activity
            android:name=".ApplicantListActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".EmployerHomeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".EmployeeInterviewActivity"
            android:exported="false" />
        <activity
            android:name=".MyJobsActivity"
            android:exported="false" />
        <activity
            android:name=".JobDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>